    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^3.4.1",
    "storybook": "^8.4.5",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
